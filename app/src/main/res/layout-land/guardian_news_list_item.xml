<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thumbnail_image_view"
        style="@style/imageViewLand"
        android:src="@drawable/logo"/>

    <LinearLayout
        style="@style/firstLinearLand">

        <TextView
            android:id="@+id/section_text_view"
            android:text="@string/section"
            style="@style/sectionLand"/>

        <TextView
            android:id="@+id/title_text_view"
            android:text="@string/title"
            style="@style/titleVertical" />
    </LinearLayout>

        <LinearLayout
            style="@style/secondLinearLand">

            <TextView
                android:id="@+id/date_text_view"
                android:text="@string/date"
                style="@style/dateLand"/>

            <TextView
                android:id="@+id/author_text_view"
                android:text="@string/author"
                style="@style/authorLand"/>
        </LinearLayout>

    </LinearLayout>